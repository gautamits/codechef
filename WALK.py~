    t=int(input())
    for i in range(t):
        n=int(input())
        List=list(map(int,input().split()))
        speed=0
        index=len(List)-1
        
        for i in List[::-1]:
            speed+=1
            if speed<i:
                if(i==max(List)):
                    speed=i+index
                    break
                else:
                    speed=i
            
            index-=1
        print(speed) 
